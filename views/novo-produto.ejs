<%- contentFor('body') %>
<h1>Novo Produto</h1>

<form method="POST" action="novo-produto">
	
	<div class="form-group">
		<label>Título</label>
		<input type="text" name="title" class="form-control" placeholder="Digite o título do produto" required>
	</div>

	<div class="form-group">
		<label>Preço</label>
		<input type="number" name="price" class="form-control" min="1" value="1" required>
	</div>

	<div class="form-group">
		<label>Etiqueta</label>
		<input type="text" name="slug" class="form-control" required placeholder="Digite a etiqueta do produto">
	</div>

	<div class="form-group">
		<label>Decrição</label>
		<textarea class="form-control" name="description" placeholder="Descrição do produto"></textarea>
	</div>
	
	<div class="form-check form-check-inline">
		<strong>Tags &nbsp;</strong>
		<input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="informatica" name="tags">
		<label class="form-check-label" for="inlineCheckbox1">Informática</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="gamer" name="tags">
		<label class="form-check-label" for="inlineCheckbox2">Gamer</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="teclado" name="tags">
		<label class="form-check-label" for="inlineCheckbox3">Teclado</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="mouse" name="tags">
		<label class="form-check-label" for="inlineCheckbox4">Mouse</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox5" value="outros" name="tags">
		<label class="form-check-label" for="inlineCheckbox5">Outros</label>
	</div>

	<p></p>
	<button class="btn btn-success btn-block">Cadastrar</button>


</form>