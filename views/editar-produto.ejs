<%- contentFor('body') %>
<h1>Editar Produto</h1>

<form method="POST" action="/editar">
	<input type="hidden" name="_id" value="<%= product._id %>">
	<input type="hidden" name="_method" value="PUT">

	<div class="form-group">
		<label>Título</label>
		<input type="text" name="title" class="form-control" value="<%= product.title %>" required>
	</div>

	<div class="form-group">
		<label>Preço</label>
		<input type="number" name="price" class="form-control" min="1" value="<%= product.price %>" required>
	</div>

	<div class="form-group">
		<label>Etiqueta</label>
		<input type="text" name="slug" class="form-control" value="<%= product.slug %>" placeholder="Digite a etiqueta do produto" required>
	</div>

	<div class="form-group">
		<label>Decrição</label>
		<textarea class="form-control" name="description" placeholder="Descrição do produto"><%= product.description %></textarea>
	</div>

	<div class="form-group">
		<label><strong>Ativo</strong></label>
		<input type="radio" name="active" value="true" <%= product.active ? "checked" : "" %> >Sim
		<input type="radio" name="active" value="false"  <%= !product.active ? "checked" : "" %>>Não
	</div>

	<div class="form-check form-check-inline">
		<strong>Tags &nbsp;</strong>
		<input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="informatica" name="tags" <%= tags.includes('informatica') ? "checked" : "" %> >
		<label class="form-check-label" for="inlineCheckbox1">Informática</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="gamer" name="tags" <%= tags.includes('gamer') ? "checked" : "" %>>
		<label class="form-check-label" for="inlineCheckbox2">Gamer</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="teclado" name="tags" <%= tags.includes('teclado') ? "checked" : "" %>>
		<label class="form-check-label" for="inlineCheckbox3">Teclado</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="mouse" name="tags" <%= tags.includes('mouse') ? "checked" : "" %>>
		<label class="form-check-label" for="inlineCheckbox4">Mouse</label>
	</div>
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="checkbox" id="inlineCheckbox5" value="outros" name="tags" <%= tags.includes('outros') ? "checked" : "" %>> 
		<label class="form-check-label" for="inlineCheckbox5">Outros</label>
	</div>

	<p></p>
	<button class="btn btn-success btn-block">Salvar</button>


</form>